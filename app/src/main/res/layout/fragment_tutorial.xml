<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="com.example.underpressurea.TutorialFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/welcome_tutorial"
                android:layout_width="341dp"
                android:layout_height="180dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal"
                android:text="Welcome to Pressure Advisor tutorial !"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="40sp"
                app:layout_constraintBottom_toTopOf="@id/btn_start_tutorial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_start_tutorial"
                style="@style/PressureButtons"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Start tutorial"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/welcome_tutorial" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>